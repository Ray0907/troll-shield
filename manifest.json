{
  "manifest_version": 3,
  "name": "Web Content Summarizer",
  "version": "1.0",
  "description": "Summarize web content using OpenAI API",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "Readability.js"]
    }
  ]
}
